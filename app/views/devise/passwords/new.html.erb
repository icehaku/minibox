<h2 class="devise-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url:
  password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "minibox_label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class: "minibox_input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password", class: "flat-button cancel-account" %>
  </div>
<% end %>

<br>

<%= render "devise/shared/links" %>
