<h2 class="devise-title"><%= t('devise.sessions.new.title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "minibox_label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class: "minibox_input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "minibox_label" %><br />
    <%= f.password_field :password, autocomplete: "off",
      class: "minibox_input" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.sessions.new.button'),
      class: "flat-button base-purple" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
