<%- if controller_name != 'sessions' %>
  <%= button_to t('devise.shared.login'), new_session_path(resource_name),
    class: "flat-button base-purple", method: :get %>
<% end -%>

<br>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= button_to t('devise.shared.signup'), new_registration_path(resource_name),
    class: "flat-button return-inbox", method: :get %>
<% end -%>

<br>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= button_to t('devise.shared.forgot_password'), new_password_path(resource_name),
    class: "flat-button cancel-account", method: :get %>
<% end -%>
