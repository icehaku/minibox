<style type="text/css">
  .new_message {
      font-weight: bold;
  }

  .new_message {
  }
</style>

<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<%= form_tag '/message/mass_action', remote: true do %>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="messages">
      <% @messages.each do |message| %>
        <%= render(partial: 'message_line', locals: { message: message }) %>
      <% end %>
    </tbody>
  </table>

  <%= submit_tag 'Mark as Read', data: { disable_with: 'Just a second...' } %>
  <%= submit_tag 'Archive', data: { disable_with: 'Just a second...' }  %>
<% end %>



<br>

<%= link_to 'New Message', new_message_path %>
